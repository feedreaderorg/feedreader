@inject NavigationManager NavigationManager

<div class="signin-panel">
    <a class="btn btn-primary" href="@MicrosoftLoginUri">
        <i class="bi bi-microsoft me-1" /> Continue with Microsoft
    </a>
    <a class="btn btn-primary" href="@GoogleLoginUri">
        <i class="bi bi-google me-1" /> Continue with Google
    </a>
</div>

@code
{
    [Parameter]
    public string RedirectUri { get; set; } = "feedreader";

    private string MicrosoftLoginUri =>
        $"https://login.microsoftonline.com/consumers/oauth2/v2.0/authorize?client_id=ecdce664-80f7-4d97-a047-ae75035b957c&redirect_uri={NavigationManager.ToAbsoluteUri("/login/microsoft")}&response_type=id_token&scope=openid&nonce={RedirectUri ?? string.Empty}";

    private string GoogleLoginUri =>
        $"https://accounts.google.com/o/oauth2/v2/auth?client_id=830207024957-oh9b7oth864jtkb32glia884o0neq1vl.apps.googleusercontent.com&redirect_uri={NavigationManager.ToAbsoluteUri("/login/google")}&response_type=id_token&scope=openid&nonce={RedirectUri ?? string.Empty}";
}
